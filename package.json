{
  "name": "chatbot",
  "version": "1.0.0",
  "main": "main.mjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.example.chatbot",
    "productName": "ChatBotV1",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/**/*",
      "main.mjs",
      "config.mjs",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.8",
    "marked": "^14.1.2",
    "typescript": "^5.6.2",
    "uuid": "^10.0.0"
  }
}
